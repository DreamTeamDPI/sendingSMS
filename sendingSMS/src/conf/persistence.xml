<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="HelpDeskPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.common.model.Tickets</class>
    <class>com.common.model.AnswerHasFile</class>
    <class>com.common.model.Employer</class>
    <class>com.common.model.UserHasTickets</class>
    <class>com.common.model.Organization</class>
    <class>com.common.model.Client</class>
    <class>com.common.model.User</class>
    <class>com.common.model.Answer</class>
    <class>com.common.model.Role</class>
    <class>com.common.model.TicketsHasFile</class>
    <class>com.common.model.Deprtment</class>
    <class>com.common.model.File</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/HelpDesk?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
